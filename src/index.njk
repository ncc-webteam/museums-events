{% set title = "Museums Events - Norfolk Museums" %}

{% extends "template.njk" %}
{% block main %}
  <section class="museums-events-stage" style="background: linear-gradient(to right, rgba(0, 35, 93, 0.8), rgba(0, 35, 93, 0.8)), url('/museums-events/public/img/stage-img-1.jpg');">
    <div class="container">
      <div class="stage-search">
        <h1 class="text-center my-5">Museums event search</h1>
        <form class="form-inline d-flex stage-search" action="/search.html">
          <input class="form-control mr-sm-2" type="search" placeholder="For example &quot;Roman&quot;" aria-label="Search">
          <button id="home-search-button" class="btn btn-outline-light d-inline-flex" type="submit">Search events</button>
        </form>
        <div class="filters-wrapper my-3">
          <div class="filters-1 d-flex">
            <div class="me-2">
              <h2 class="h5">Date to</h2>
              <button class="btn btn-primary filter-btn">filter1</button>
            </div>
            <div>
              <h2 class="h5">Date from</h2>
              <button class="btn btn-primary filter-btn">filter2</button>
            </div>
          </div>
          <div class="filters-2">
            <div>
              <h2 class="h5">Refine</h2>
              <button id="filter-type" class="btn btn-primary filter-btn">Type</button>
              <button id="filter-location" class="btn btn-primary filter-btn">Location</button>
              <button id="filter-audience" class="btn btn-primary filter-btn">Audience</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section>
    <p>peeky swipers go here</p>
  </section>

{% endblock %}